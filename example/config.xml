<?xml version='1.0' encoding='utf-8'?>
<widget id="com.photokandy.PKVideoThumbnail.example" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>VideoThumbnailExample</name>
    <description>
        This is a simple demonstration of the video thumbnail plugin. It will download a video file and then display
        an extracted frame using two methods: file-based and base64-encoded.
    </description>
    <author email="kerrishotts@gmail.com" href="http://kerrishotts.github.io">
        Kerri Shotts
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="~4.0.1" />
    <engine name="android" spec="~5.1.0" />
    <plugin name="cordova-plugin-photokandy-video-thumbnail" spec="~2.1.0" />
    <plugin name="cordova-plugin-device" spec="~1.1.1" />
    <plugin name="cordova-plugin-file-transfer" spec="~1.5.0" />
</widget>
